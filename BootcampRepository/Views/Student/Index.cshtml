@model List<Student>

@{
    ViewData["Title"] = "Estudiantes";
}

<h1 class="bg-info text-white">Estudiantes</h1>
<a asp-controller="Student" asp-action="AddOrEdit" class="btn btn-secondary">Añadir estudiante</a>

<hr />
<table class="table table-sm table-bordered">
    <tr>
        <th>Id</th>
        <th>Nombre</th>
        <th>Calificación</th>
    </tr>
    @foreach (var estudiante in @Model)
    {
        <tr>
            <td>@estudiante.Id</td>
            <td>@estudiante.Nombre</td>
            <td>@estudiante.Calificacion</td>
        </tr>
    }
</table>